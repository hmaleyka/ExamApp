@using ExamApp.Business.ViewModels.BlogVM;

@model CreateBlogVM 

<div class="container">
<form method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label asp-for="Title">Title</label>
    <input  class="form-control" asp-for="Title">
    <span asp-validation-for="Title" style="color:red"></span>
  </div>
  <div class="form-group">
            <label asp-for="Description">Description</label>
            <input class="form-control" asp-for="Description">
            <span asp-validation-for="Description" style="color:red"></span>
  </div>
  <div class="form-check">
            <label asp-for="Image">Image</label>
            <input class="form-control" asp-for="Image">
            <span asp-validation-for="Image" style="color:red"></span>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>